<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <h1>Welcome to fazbook</h1>
    <a href='/users/new'>Create a user</a>
    <% users.forEach(function(user){ %>
        <div>
            <span>
            <%= user.email %>
            </span>
            <span>
            <%= user.firstName %>
            </span>
            <span>
            <%= user.lastName %>
            </span>
            <span>
            <%= user.dob %>
            </span>
            <form action="<%= '/users/' + user.id + '?_method=DELETE' %>" method="POST">
                <input type="submit" valule="X" />
            </form>
        </div>
        <% })%>
</body>

</html>